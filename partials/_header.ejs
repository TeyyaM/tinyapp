<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <%if (user) {%>
      <a class="text-right" style="margin: 1em;">
        Logged in as: <%=user.email%>
      </a>
      <form action="/logout" method="POST">
        <button type="submit" name="logout" class="btn btn-primary"
          style="color: #dbdbdb; background-color: #6d16c4;">Logout</button>
      </form>
      <%}%>
        <%if (!user) {%>
          <a class="nav-item nav-link" href="/register" style="color: #dbdbdb; background-color: #520e97;">Register</a>
          <a class="nav-item nav-link" href="/login" style="color: #dbdbdb; background-color: #6d16c4;">Login</a>
          <%}%>
  </nav>
</header>